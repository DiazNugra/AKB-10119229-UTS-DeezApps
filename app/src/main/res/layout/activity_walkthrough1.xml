<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".walkthroughActivity1"
    android:background="@color/overlayGreyBG"
    android:padding="20sp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/deez_apps_logo_lg"
                android:layout_centerHorizontal="true">

            </ImageView>


            <TextView
                android:id="@+id/tentangApps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo"
                android:textSize="24sp"
                android:text="@string/infoApps"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto"
                android:layout_marginTop="20sp"
                android:layout_centerHorizontal="true">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tentangApps"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto"
                android:lineSpacingExtra="5dp"
                android:padding="10dp"
                android:text="@string/walktrhough1"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp">

            </TextView>

        </RelativeLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonLanjut1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="180dp"
        android:background="@drawable/custom_button"
        android:text="Lanjut"
        android:textSize="24sp">

    </androidx.appcompat.widget.AppCompatButton>


</RelativeLayout>