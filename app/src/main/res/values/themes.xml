<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DeezApps" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/overlayGreyBG</item>
        <item name="colorPrimaryVariant">@color/overlayGreyBG</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    
    <style name="roundImageCorner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
        <item name="color">@color/white</item>
    </style>

    <style name="rounderImageCorner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">200dp</item>
        <item name="color">@color/white</item>
    </style>

    <!--text styles-->

    <style name="titleText">
        <item name="fontFamily">@font/monseratt_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="subTitleText">
        <item name="fontFamily">@font/monseratt_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="contactContent">
        <item name="fontFamily">@font/monseratt_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="namaSaya">
        <item name="fontFamily">@font/monseratt_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
    </style>

</resources>